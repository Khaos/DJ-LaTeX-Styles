\newcommandx\Normal[4][usedefault, addprefix=\global, 1=D]{\mathcal{N}{(#2|#3,#4)} = \frac{1}{(2\pi)^{#1/2}}\frac{1}{|#4|^{1/2}}\exp\left\{  -\frac{1}{2}(#2-#3)^{T}#4^{-1}(#2-#3)\right\}  }

