%% ! Brilliant Definition!
%%   This gives a nested integrate, that is,
%%     \Integrate{f(x,y,z,t)}{t}{x}{y}{z}
%%   gives a fourth-order integrate
\let\orig@Integrate\Integrate
\renewcommand\Integrate[2]{%
  \@ifnextchar\bgroup
    {\Integrate{\orig@Integrate{#1}{#2}}}
    {\orig@Integrate{#1}{#2}}}
\let\Int\Integrate
